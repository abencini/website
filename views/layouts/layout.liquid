<!doctype html>

<html lang="en">

    <head>

        <title>{% block title %}{{ global.site.title }}{% if model.page.title %} &mdash; {{ model.page.title }}{% endif %}{% endblock %}</title>

        <meta charset="UTF-8" />

        <link rel="shortcut icon" type="image/png" href="/favicon.png" />

        <!-- Styles -->
        {{ "application.css" | asset_url | stylesheet_tag }}
        {% block styles %}{% endblock %}

    </head>

    <body>

        <!-- Page Contents -->
        {% include "header" %}
        {% block content %}{% endblock %}
        {% include "footer" %}

        <!-- Scripts -->
        {% block scripts %}{% endblock %}
        {{ "application.js" | asset_url | script_tag }}

    </body>

</html>
