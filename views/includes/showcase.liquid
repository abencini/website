<ol>
    {% for item in collection.items %}
    <li class="block">
        {% if item.link %}
            {% assign url = item.link %}
        {% else %}
            {% assign url = "portfolio" | append: item.slug %}
        {% endif %}

        <div class="title-text">
            <a href="{{ url }}">
                {{ "300x200" | placeholder | image_tag: item.title }}
                <p>{{ item.title }}</p>
            </a>
        </div>
    </li>
    {% endfor %}
</ol>
